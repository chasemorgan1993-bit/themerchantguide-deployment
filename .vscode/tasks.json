{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript: Watch",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "group": "build",
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "ESLint: Check All",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Build and Check",
      "type": "shell",
      "command": "npm",
      "args": ["run", "check-all"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}